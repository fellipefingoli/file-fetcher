#!/usr/bin/env ruby

require "bundler/setup"
require "file_fetcher"

def process_argv(option)
  case option
  when '-h', '--help'
    puts <<-HEREDOC
FileFetcher #{FileFetcher::VERSION}

How to use:
  file_fetcher <resource_path> <options>

  Options:
    -h,  --help                      Prints this help
    -F,  --file=FILE                 Read files from a file
    -C,  --concurrent=true           Set concurrent requests
HEREDOC
    exit
  when '-F'
    @options[:read_file] = true
  when '-C', /^--concurrent=true$/m
    @options[:concurrent] = true
  when /^--file=(.*)$/m
    @options[:read_file] = true
    @resource_paths = [$1]
  else
    @resource_paths = [option]
  end
end

@options = {}

ARGV.each do |option|
  process_argv(option)
end

FileFetcher::API.fetch_and_dispatch(@resource_paths, @options).each do |result|
  puts "#File#{i+1}: #{fetcher.resource.from_path} -> #{fetcher.resource.to_path}" if fetcher.fetched
end





